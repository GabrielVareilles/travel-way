<div class="navbar-wagon">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
  <%= image_tag "TW.png", id: "logo" %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">



    <% if user_signed_in? %>
      <%= link_to "My Trips", "/trips" %>
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/30x30" %>
          <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li><a href="#">Profile</a></li>
            <%= link_to "Profile", profile_path, class: "navbar-log_in navbar-wagon-link" %>

            <li><%= link_to "Log out", destroy_user_session_path, :method => :delete%></li>
          </ul>
        </div>
      </div>
    <% else %>
      <div class="navbar-wagon-item">
      <%= link_to "Log in", "/users/sign_in", class: "navbar-log_in navbar-wagon-link" %>
      <%= link_to "Sign up", "/users/sign_up", class: "navbar-log_in navbar-wagon-link" %>
      </div>

    <% end %>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <% if user_signed_in? %>
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><a href="#">Trips</a></li>
        </ul>
      </div>
    <% else %>
      <div class="navbar-wagon-item">
      <%= link_to "Log in", "/users/sign_in", class: "navbar-log_in navbar-wagon-link" %>
      <%= link_to "Sign up", "/users/sign_up", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
