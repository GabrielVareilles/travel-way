<div class="site-holder form-signup" style="background-image: url(<%= image_path('background.jpg') %>)">
  <div class="container signup">
    <div class="row">
      <div class="col-sm-offset-4 col-sm-4">
      <h2>Sign up</h2>
        <div class="content-signup">
          <div class="card-photo background-with-image-3" style="background-image: linear-gradient(rgba(111, 198, 217, 0.8), rgba(111, 198, 217, 0.8)), url(<%= image_path('large-3.jpg') %>)"></div>
          <div class="card-form">
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
              <div class="form-inputs">
                <%= f.input :email, required: true, placeholder: "peter@pan.com", label: "Your email", autofocus: true %>
                <%= f.input :password, required: true, placeholder: "********", label: "Your password", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                <%= f.input :password_confirmation, required: true, placeholder: "********", label: "Please, confirm" %>
              </div>
              <div class="form-actions">
                <%= f.submit class: "btn background-1 form-trip" %>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
