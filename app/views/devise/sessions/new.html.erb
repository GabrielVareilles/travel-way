<div class="site-holder form" style="background-image: url(<%= image_path('background.jpg') %>)">
  <div class="container login">
    <div class="row">
      <div class="col-sm-offset-4 col-sm-4">
      <h2>Log in</h2>
        <div class="content-login">
          <div class="card-photo-login background-with-image-3" style="background-image: linear-gradient(rgba(111, 198, 217, 0.8), rgba(111, 198, 217, 0.8)), url(<%= image_path('large-3.jpg') %>)"></div>
          <div class="card-form">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email, required: false, placeholder: "peter@pan.com", label: "Your email", autofocus: true %>
                <%= f.input :password, required: false, placeholder: "********", label: "Your password" %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
              <div class="form-actions">
                <%= f.submit class: "btn background-1 form-trip" %>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
