                    </div>
                  </div>
                  <div class="panel-body body-r2r">
                    <table class="table table-travel">
                      <% @results['routes'].each do |route| %>
                        <tbody>
                          <tr>
                            <td><h5><%= route['name'] %></h5></td>
                            <td><h6><%= route['totalDuration'].to_i / 60 %>h<%= (route['totalDuration'].to_i % 60) / 01 %></h6></td>
