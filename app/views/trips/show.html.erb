            <div class="timeline-badge">
            </div>
            <div class="timeline-line">
            </div>
                <div class="timeline-panel">
                  <div class="timeline-body">
                    <div class="top-link">
                      <a href="javascript:void(0);" onclick="scrollToAnchor('top')">
                        <span class="glyphicon glyphicon-menu-up"></span>
                      </a>
                    </div>
